<% layout('layouts/boilerplate') %>

<main class="container pt-5 mt-5">
    
  <!-- Flash Messages -->
  <% if (success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
  
  <% if (error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <div class="row justify-content-center g-4">

    <!-- CAMPGROUND CARD -->
    <div class="col-lg-6">
      <div class="card mb-3">
        <div class="row g-0">
          <div class="col-md-4">
            <img
              src="<%= campground.image %>"
              alt="Campground"
              class="img-fluid h-100 rounded-start"
              style="object-fit: cover;"
            >
          </div>

          <div class="col-md-8">
            <div class="card-body d-flex flex-column h-100">
              <h5 class="card-title"><%= campground.title %></h5>
              <small class="text-muted mb-3">Submitted by <%= campground.author.username %></small>
              <p class="card-text"><%= campground.description %></p>
              <p class="card-text">$<%= campground.price %>/night</p>
              <small class="text-muted mb-3"><%= campground.location %></small>

              <% if(currentUser && campground.author.equals(currentUser._id)){ %>
              <div class="mt-auto d-flex gap-2">
                
                  <a href="/campgrounds/<%= campground._id %>/edit"
                  class="btn btn-primary"
                >
                  Edit
                </a>

                <form
                  method="POST"
                  action="/campgrounds/<%= campground._id %>?_method=DELETE"
                >
                  <button class="btn btn-danger">
                    Delete
                  </button>
                </form>
              </div>
              <% } %>
            </div>
          </div>

        </div>
      </div>

      <a href="/campgrounds" class="btn btn-secondary w-100">
        Go Back
      </a>
    </div>

    <!-- REVIEWS -->
    <div class="col-lg-6">
      <% if(currentUser){ %>
      <section class="mb-4">
        <form
          class="needs-validation"
          method="POST"
          action="/campgrounds/<%= campground._id %>/reviews"
          novalidate
        >
          <label class="form-label" for="body">Review</label>
          <textarea
            class="form-control"
            name="body"
            id="body"
            required
          ></textarea>

          <label class="form-label mt-2" for="rating">Rating</label>
          <input
            class="form-control"
            type="number"
            name="rating"
            id="rating"
            min="0"
            max="5"
            required
          >

          <button class="btn btn-primary mt-3">
            Submit Review
          </button>
        </form>
      </section>
      <% } %>
      <section class="d-flex flex-column gap-3">
        <% if(campground.reviews.length === 0){ %>
          <small>No reviews yet</small>
        <% } else { %>
        <% for (let review of campground.reviews) { %>
          <div class="card p-3">
            <p class="card-title fw-bold"><%= review.rating %></p>
            <p class="card-subtitle text-muted">By <%= review.author.username %></p>
            <p class="mb-1">Review: <%= review.body %></p>
            <% if(currentUser && review.author.equals(currentUser)){ %>
            <form action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
              <button class="btn btn-sm btn-danger mt-3">Delete</button>
            </form>
            <% } %>
          </div>
        <% }} %>
      </section>
    </div>

  </div>
</main>