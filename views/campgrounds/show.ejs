<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/starability.css">

<div class="campground-details">
  <div class="container">
    
    <!-- Flash Messages -->
    <% if (success && success.length) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    
    <% if (error && error.length) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <!-- Back Button -->
    <div class="mb-4">
      <a href="/campgrounds" class="btn btn-secondary">
        ‚Üê Back to Campgrounds
      </a>
    </div>

    <div class="row g-5">

      <!-- CAMPGROUND DETAILS -->
      <div class="col-lg-8">
        
        <!-- Image Carousel -->
        <div class="campground-image">
          <% if(campground.images && campground.images.length > 0) { %>
          <div id="campgroundCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <% campground.images.forEach((img, index) => { %>
                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                  <img 
                    crossorigin="anonymous"
                    src="<%= img.url %>" 
                    class="d-block w-100" 
                    alt="<%= campground.title %>"
                    style="height: 400px; object-fit: cover;"
                  >
                </div>
              <% }); %>
            </div>
            
            <% if(campground.images.length > 1) { %>
            <button class="carousel-control-prev" type="button" data-bs-target="#campgroundCarousel" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#campgroundCarousel" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
            <% } %>
          </div>
          <% } else { %>
          <div style="height: 400px; background-color: var(--neutral-100); display: flex; align-items: center; justify-content: center; color: var(--neutral-500);">
            No images available
          </div>
          <% } %>
        </div>

        <!-- Campground Info -->
        <div class="campground-info">
          <h1 class="campground-title"><%= campground.title %></h1>
          
          <div class="campground-meta">
            <div class="meta-item">
              <span>üìç</span>
              <span><%= campground.location %></span>
            </div>
            <div class="meta-item">
              <span>üë§</span>
              <span>Posted by <%= campground.author.username %></span>
            </div>
            <div class="price-display">
              $<%= campground.price %> per night
            </div>
          </div>
          
          <div class="mb-4">
            <h3>About this campground</h3>
            <p><%= campground.description %></p>
          </div>

          <% if(currentUser && campground.author.equals(currentUser._id)){ %>
          <div class="d-flex gap-3">
            <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-primary">
              Edit Campground
            </a>
            <form method="POST" action="/campgrounds/<%= campground._id %>?_method=DELETE" class="d-inline">
              <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this campground?')">
                Delete Campground
              </button>
            </form>
          </div>
          <% } %>
        </div>
      </div>

      <!-- REVIEWS & MAP -->
      <div class="col-lg-4">
        
        <!-- Map -->
        <div class="card mb-4">
          <div class="card-body p-0">
            <div id="map" style="width: 100%; height: 250px; border-radius: var(--radius-lg);"></div>
          </div>
        </div>

        <!-- Reviews Section -->
        <div class="reviews-section">
          <div class="reviews-header">
            <h3>Reviews</h3>
            <span class="reviews-count"><%= campground.reviews.length %></span>
          </div>
          
          <!-- Review Form -->
          <% if(currentUser){ %>
          <div class="review-form">
            <h5>Leave a Review</h5>
            <form
              class="needs-validation"
              method="POST"
              action="/campgrounds/<%= campground._id %>/reviews"
              novalidate
            >
              <div class="mb-4">
                <label class="form-label" for="rating">Rating</label>
                <fieldset class="starability-basic">
                  <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="1" checked aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="rating" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="rating" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="rating" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="rating" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="rating" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
              </div>

              <div class="mb-4">
                <label class="form-label" for="body">Your Review</label>
                <textarea
                  class="form-control"
                  name="body"
                  id="body"
                  rows="4"
                  placeholder="Share your experience at this campground..."
                  required
                ></textarea>
              </div>

              <button class="btn btn-primary w-100">
                Submit Review
              </button>
            </form>
          </div>
          <% } else { %>
          <div class="auth-prompt">
            <h5>Want to leave a review?</h5>
            <p class="text-muted mb-4">Sign in to share your experience with other campers</p>
            <a href="/login" class="btn btn-primary">Sign In to Review</a>
          </div>
          <% } %>

          <!-- Reviews List -->
          <div class="mt-4">
            <% if(campground.reviews.length === 0){ %>
              <div class="review-empty">
                <div class="review-empty-icon">üí¨</div>
                <h6 class="mb-2">No reviews yet</h6>
                <p class="text-muted mb-0">Be the first to share your experience at this campground!</p>
              </div>
            <% } else { %>
              <% for (let review of campground.reviews) { %>
                <div class="review-item">
                  <div class="review-header">
                    <div class="review-meta">
                      <p class="starability-result mb-1" data-rating="<%= review.rating %>">
                        Rated: <%= review.rating %> stars
                      </p>
                      <p class="review-author mb-0">
                        <%= review.author.username %>
                      </p>
                    </div>
                    <% if(currentUser && review.author.equals(currentUser)){ %>
                    <form action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST" class="d-inline">
                      <button class="btn btn-sm btn-danger" onclick="return confirm('Delete this review?')">
                        Delete
                      </button>
                    </form>
                    <% } %>
                  </div>
                  <p class="review-body mb-0"><%= review.body %></p>
                </div>
              <% } %>
            <% } %>
          </div>
        </div>
      </div>
      
    </div>
  </div>
</div>

<%-"<script>"%>
const maptilerApiKey = '<%- process.env.MAPTILER_API_KEY %>';
const campground = <%- JSON.stringify(campground) %>;
<%-"</script>"%>

<script src="/javascripts/showPageMap.js"></script>