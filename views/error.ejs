<%- layout('/layouts/boilerplate') %>

<div class="py-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-6">
        
        <div class="text-center mb-5">
          <h1 class="mb-3">Oops! Something went wrong</h1>
          <p class="lead text-muted">We encountered an unexpected error</p>
        </div>

        <div class="card">
          <div class="card-body text-center p-5">
            <div class="alert alert-danger border-0 mb-4" role="alert">
              <h2 class="alert-heading mb-3">Error <%= statusCode %></h2>
              <p class="mb-0"><%= message %></p>
              
              <% if(process.env.NODE_ENV !== "production") { %>
              <div class="mt-4 p-3 bg-light rounded text-start">
                <h6 class="text-muted mb-2">Debug Information:</h6>
                <pre class="text-muted small mb-0"><%= err.stack %></pre>
              </div>
              <% } %>
            </div>

            <div class="d-flex gap-3 justify-content-center">
              <a href="/campgrounds" class="btn btn-primary">
                Browse Campgrounds
              </a>
              <a href="/" class="btn btn-secondary">
                Go Home
              </a>
            </div>
          </div>
        </div>

        <div class="card mt-4 bg-light border-0">
          <div class="card-body text-center">
            <h6 class="mb-3">What you can do:</h6>
            <ul class="list-unstyled mb-0 small text-muted">
              <li class="mb-2">• Check the URL for any typos</li>
              <li class="mb-2">• Go back to the previous page</li>
              <li>• Visit our homepage to start fresh</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>